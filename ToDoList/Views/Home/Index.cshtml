    
    <h1 style="font-size:60px">Login form</h1>
<div style="padding-top:10px">

    <form method="post" action="/Home/checkAccount">
        <div>
            <label class="form-label m-0" style="font-size : 20px">Email Address</label>
            <input class="form-control" style="width:650px" type="text" required name="email">         
        </div>
        <div>
            <label class="form-label m-0" style="font-size : 20px">Password</label>
            <input class="form-control" style="width:650px" type="password" required name="password">
        </div>
        
        <div >
            <div class="form-check form-switch" style="padding-top:10px">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked="">
                <label class="form-check-label" for="flexSwitchCheckChecked">Remember me</label>
            </div>

            
            <div class="link-info">
                <a href="#">Forgot password?</a>
            </div>
        </div>
        <div style="padding-top:10px">
            <input class="btn-dark" style="width:100px" type="submit" value="Login">

        </div>
        <div style="padding-top:10px">
            Not a member? <a href="~/Home/regestraion">Signup now</a>
        </div>
    </form>
</div>