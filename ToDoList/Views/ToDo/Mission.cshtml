@model List<Mission>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<br />
<div class="row">
    <div class="col-7">
        <h2 >Daily Task List</h2>
    </div>
    <div class="col-4" style="text-align: right">
        <a asp-action="Create" asp-route-Id="@ViewData["id"]"> Add New ToDo List</a>
    </div>
</div>
<br />
<table class="table table-dark">
    <thead style="text-align:center">
        <tr class="table-info">
            <th class="text-light">
                Name
            </th>
            <th class="text-light">
                Content
            </th >
            <th class="text-light">
               Notes
            </th>
          
        </tr>
    </thead>
    
        <tbody style="text-align:center">
        @foreach (Mission item in Model)
        {
         <tr class="table-active">
            <td class="text-white">
                @item.Name
            </td>
            <td class="text-white">
                @item.Content
            </td>
            <td class="text-white">
                @item.Note
           
        </tr>
}
    </tbody>
    
    
</table>